<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/nxp_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/nxp_img" />

        <TextView
            android:id="@+id/data_text_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:text="@string/dta_test_app"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_layout"
        android:paddingBottom="5dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" >

            <RelativeLayout
                android:id="@+id/status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ph_border_different_color_two"
                android:gravity="center"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/current_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ph_border_different_color_two"
                    android:textColor="@android:color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <!--
                     <TextView
                    android:id="@+id/running_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/current_status"
                    android:background="@drawable/border_different_color_two"
                    android:text="@string/status_result"
                    android:textColor="@color/red"
                    android:textSize="25sp"
                    android:textStyle="bold" />-->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent_execution_pattern_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/status_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:padding="10dp" >

                <RelativeLayout
                    android:id="@+id/execution_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/view"
                    android:background="@drawable/ph_border_different_color_one"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/execution_mode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@string/execution_mode"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <RadioGroup
                        android:id="@+id/auto_manual_rb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/execution_mode"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/auto_radio_button"
                            android:layout_marginTop="10dp"
                            android:checked="false"
                            android:text="@string/auto" />

                        <RadioButton
                            android:id="@+id/manual_radio_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="95dp"
                            android:layout_marginTop="10dp"
                            android:checked="true"
                            android:text="@string/manual" />
                    </RadioGroup>
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:id="@+id/pattern_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignBottom="@+id/execution_layout"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@+id/view"
                    android:layout_below="@+id/view"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/execution_layout"
                    android:background="@drawable/ph_border_different_color_one"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/pattern_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="@string/pattern"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/custom"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/pattern_text"
                        android:layout_alignTop="@+id/spinner_text"
                        android:ems="10"
                        android:hint="@string/custom"
                        android:singleLine="true" >
                    </EditText>

                    <Spinner
                        android:id="@+id/spinner_text"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="30dp"
                        android:entries="@array/multi_text_array"
                        android:popupBackground="#111111"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:id="@+id/multiText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/custom"
                        android:layout_alignBottom="@+id/custom"
                        android:layout_toLeftOf="@+id/spinner_text"
                        android:text="@string/multi"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rf_main_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/parent_execution_pattern_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/ph_border_different_color_two"
                android:padding="0dp" >

                <TextView
                    android:id="@+id/rf_tec_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/rf_technology"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/poll_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rf_tec_text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:padding="10dp" >

                    <RelativeLayout
                        android:id="@+id/poll_main_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/poll_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/poll"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/poll_btn_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/poll_text"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ph_border_different_color_one"
                            android:padding="5dp" >

                            <RelativeLayout
                                android:id="@+id/a_poll_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/a_poll_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="A"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/a_poll_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/a_poll_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/b_poll_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/a_poll_layout" >

                                <TextView
                                    android:id="@+id/b_poll_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="B"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/b_poll_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/b_poll_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/f_poll_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/b_poll_layout" >

                                <TextView
                                    android:id="@+id/f_poll_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="F"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/f_poll_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/f_poll_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/v_poll_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/f_poll_layout" >

                                <TextView
                                    android:id="@+id/v_poll_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="V"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/v_poll_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/v_poll_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/listen_main_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_toRightOf="@+id/poll_main_layout" >

                        <TextView
                            android:id="@+id/listen_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/listen"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/listen_btn_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/listen_text"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/ph_border_different_color_one"
                            android:padding="5dp" >

                            <RelativeLayout
                                android:id="@+id/a_listen_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/a_listen_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="A"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/a_listen_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/a_listen_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/b_listen_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/a_listen_layout" >

                                <TextView
                                    android:id="@+id/b_listen_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="B"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/b_listen_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/b_listen_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/f_listen_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/b_listen_layout" >

                                <TextView
                                    android:id="@+id/f_listen_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="F"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/f_listen_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/f_listen_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/v_listen_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="17dp"
                                android:layout_toRightOf="@+id/f_listen_layout" >

                                <TextView
                                    android:id="@+id/v_listen_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="V"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" />

                                <CheckBox
                                    android:id="@+id/v_listen_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/v_listen_text"
                                    android:layout_marginTop="-5dp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/other_selection_main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rf_main_layout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp" >

                <RelativeLayout
                    android:id="@+id/other_selection_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true" >

                    <TextView
                        android:id="@+id/other_selections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/other_selection"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/uicc_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/other_selection_layout"
                    android:layout_centerHorizontal="true"
                    android:padding="5dp" >

                    <RelativeLayout
                        android:id="@+id/card_emulation_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ph_border_different_color_three"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true">

                        <CheckBox
                            android:id="@+id/card_emulation_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/card_emulation"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/card_emulation_txt"
                            android:id="@+id/card_emulation_radio_group"
                            android:background="@drawable/ph_border_different_color_three" >

                            <RadioButton
                                android:id="@+id/uicc_check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/uicc"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/cefh_check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/cefh"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/ese_Check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="@string/ese_check_box"
                                android:textSize="18sp" />
                        </RadioGroup>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/p2p_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/card_emulation_layout"
                        android:background="@drawable/ph_border_different_color_three"
                        android:padding="5dp" >

                        <CheckBox
                            android:id="@+id/clearp2p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/p2p_txt"/>

                        <TextView
                            android:id="@+id/p2p_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/p2p"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <RadioGroup
                            android:id="@+id/llcp_snep_rg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/p2p_txt"
                            android:background="@drawable/ph_border_different_color_three"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/llcp_check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:text="@string/llcp"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/snep_check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/p2p_txt"
                                android:layout_toRightOf="@id/llcp_check_box"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:text="@string/snep" />

                             <RadioButton
                                android:id="@+id/dummy_check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="40dp"
                                android:paddingRight="40dp"
                                android:text="@string/dummyradio"
                                android:visibility="invisible"/>
                        </RadioGroup>

                        <RadioGroup
                            android:id="@+id/depi_dept_rg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/p2p_txt"
                            android:visibility="gone"
                            android:layout_toRightOf="@id/llcp_snep_rg"
                            android:background="@drawable/ph_border_different_color_three"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/depinitiator_check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/depi"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/deptarget_check_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dept" />
                        </RadioGroup>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/other_selection_main_layout"
                android:layout_marginTop="5dp"
                android:background="@drawable/ph_border_different_color_two" >

                <TextView
                    android:id="@+id/utilities"
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="@string/utilities"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/utilities_main_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/utilities"
                    android:layout_centerHorizontal="true" >

                    <RelativeLayout
                        android:id="@+id/log_msg_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/ph_border_different_color_three"
                        android:gravity="right"
                        android:padding="2dp" >

                        <TextView
                            android:id="@+id/log_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/log_messages"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <CheckBox
                            android:id="@+id/logtofile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@id/log_msg"
                            android:layout_marginTop="5dp"
                            android:text="@string/file_txt" />

                        <CheckBox
                            android:id="@+id/logcat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/logtofile"
                            android:text="@string/console_txt" />

                        <EditText
                            android:id="@+id/logtofiletext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/log_msg"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/logtofile"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_file_path"
                            android:singleLine="true" >
                        </EditText>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/divese_selection_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/log_msg_layout"
                        android:background="@drawable/ph_border_different_color_three"
                        android:padding="2dp" >

                        <TextView
                            android:id="@+id/device_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/device"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <RelativeLayout
                            android:id="@+id/device_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/device_msg"
                            android:visibility="invisible"
                            android:layout_centerHorizontal="true" >

                            <TextView
                                android:id="@+id/deviceselection"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="8dp"
                                android:text="@string/device_selection"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#111111"
                                android:textSize="15sp" />

                            <Spinner
                                android:id="@+id/device_selector"
                                android:layout_width="120dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="90dp"
                                android:layout_toRightOf="@id/deviceselection"
                                android:gravity="right"
                                android:popupBackground="#111111"
                                android:spinnerMode="dropdown" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/device_layout"
                            android:layout_marginTop="3dp" >

                            <CheckBox
                                android:id="@+id/versionnumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/version_number" />

                            <TextView
                                android:id="@+id/firmwareversion_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@+id/versionnumber"
                                android:layout_marginRight="5dp"
                                android:text="@string/firmare_version"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <CheckBox
                    android:id="@+id/custom_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/utilities_main_layout"
                    android:layout_marginLeft="10dp"
                    android:text="@string/custom_msg" />

                <TextView
                    android:id="@+id/tcp_ip_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/utilities_main_layout"
                    android:layout_centerHorizontal="true"
                    android:padding="15dp"
                    android:text="@string/tcp_ip_status"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <CheckBox
                    android:id="@+id/show_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/utilities_main_layout"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/show_msg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/run_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/stop"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@color/grey"
                    android:padding="15dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/stop"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/run"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="72dp"
                    android:layout_toLeftOf="@+id/stop"
                    android:background="@color/green"
                    android:padding="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="40dp"
                    android:text="@string/run"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/exit_btn"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="72dp"
                    android:layout_toRightOf="@+id/stop"
                    android:background="@color/orange"
                    android:padding="15dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:text="@string/exit"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- <TextView
                android:id="@+id/version_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/run_layout"
                android:layout_marginTop="30dp"
                android:paddingRight="10dp"
                android:text="@string/version_number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="12sp" /> -->

            <TextView
                android:id="@+id/copyrights"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/run_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:paddingRight="10dp"
                android:text="@string/copyright_nxp_semiconductors"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
